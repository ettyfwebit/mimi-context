# Backend Environment Variables Template
# Copy this file to .env and fill in the actual values
# NEVER commit the actual .env file to version control

# Application Configuration
APP_NAME=mimi-core
APP_ENV=development
PORT=8081
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./mimi_metadata.db
# For PostgreSQL: postgresql+asyncpg://username:password@localhost:5432/dbname

# Vector Database Configuration
VECTOR_BACKEND=qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# Embedding Configuration  
EMBEDDING_PROVIDER=local
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2

# AI/ML Agent Configuration
AGENT_BACKEND=openai
OPENAI_API_KEY=sk-your_openai_api_key_here  # SECURITY: Never commit actual keys!
AGENT_OPENAI_MODEL=gpt-4o-mini
AGENT_ENABLE_MEMORY=false

# For Ollama (alternative to OpenAI)
# AGENT_BACKEND=ollama
# OLLAMA_HOST=http://localhost:11434
# OLLAMA_MODEL=llama2

# Security Configuration
SECRET_KEY=your_super_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# External Services
REDIS_URL=redis://localhost:6379/0

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# File Processing
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=["pdf", "txt", "docx", "md"]
# AGENT_OLLAMA_MODEL=mistral